<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark"
    tools:context=".MainActivity">

    <!-- ── AppBar ───────────────────────────────────────────── -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:elevation="4dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/toolbar_bg"
            app:titleTextColor="@color/green_accent"
            app:subtitleTextColor="@color/text_muted"
            app:popupTheme="@style/Theme.StressVision.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- ── Main content (Map + Overlays) ─────────────────────── -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Full-screen Google Map -->
        <fragment
            android:id="@+id/map_fragment"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- ── Prototype label (top overlay) ─────────────────── -->
        <TextView
            android:id="@+id/prototype_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_chip"
            android:textColor="@color/text_muted"
            android:textSize="10sp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:fontFamily="monospace"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="12dp" />

        <!-- ── Legend Card (shown when Stress-Vision active) ──── -->
        <androidx.cardview.widget.CardView
            android:id="@+id/legend_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="14dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/card_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="16dp"
            android:layout_marginBottom="100dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <!-- Legend title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STRESS CLASSIFICATION"
                    android:textColor="@color/text_muted"
                    android:textSize="9sp"
                    android:letterSpacing="0.12"
                    android:fontFamily="monospace"
                    android:layout_marginBottom="10dp" />

                <!-- Healthy -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="6dp">
                    <View
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:background="@drawable/legend_dot_green"
                        android:layout_marginEnd="8dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Healthy"
                        android:textColor="@color/text_primary"
                        android:textSize="13sp" />
                </LinearLayout>

                <!-- Moderate Stress -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="6dp">
                    <View
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:background="@drawable/legend_dot_yellow"
                        android:layout_marginEnd="8dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Moderate Stress"
                        android:textColor="@color/text_primary"
                        android:textSize="13sp" />
                </LinearLayout>

                <!-- Severe Stress -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <View
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:background="@drawable/legend_dot_red"
                        android:layout_marginEnd="8dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Severe Stress"
                        android:textColor="@color/text_primary"
                        android:textSize="13sp" />
                </LinearLayout>

                <!-- Hint: tap zone -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tap a zone for details"
                    android:textColor="@color/text_muted"
                    android:textSize="10sp"
                    android:fontFamily="monospace"
                    android:layout_marginTop="8dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ── FAB (Floating Action Button) ─────────────────────── -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_stress_vision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Stress Vision"
        android:textColor="@color/bg_dark"
        android:contentDescription="Enable Stress Vision"
        app:icon="@drawable/ic_eye"
        app:iconTint="@color/bg_dark"
        app:backgroundTint="@color/green_accent"
        app:elevation="8dp"
        app:layout_anchor="@id/app_bar_layout"
        app:layout_anchorGravity="bottom|end"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
