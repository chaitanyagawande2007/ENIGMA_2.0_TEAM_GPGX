<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- â•â• LAYER 1: Full-screen map â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <fragment
        android:id="@+id/map_fragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!-- â•â• LAYER 2: Top AppBar + Search â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary_dark"
            app:titleTextColor="#FFFFFF"
            app:subtitleTextColor="#A5D6A7"/>

        <!-- Search bar row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_search"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="6dp"
            android:padding="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”"
                android:textSize="16sp"
                android:paddingStart="8dp"
                android:paddingEnd="4dp"
                android:gravity="center_vertical"/>

            <EditText
                android:id="@+id/search_input"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="Search location..."
                android:textColorHint="#80FFFFFF"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:background="@android:color/transparent"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:singleLine="true"/>
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- â•â• LAYER 3: Bottom panel â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="@color/primary_dark"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="24dp"
        android:elevation="8dp">

        <!-- AI Status Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/ai_status_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/card_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:id="@+id/tv_ai_class"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸŸ¢ Healthy"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tv_ai_damage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Damage risk: 0%"
                        android:textColor="#CCFFFFFF"
                        android:textSize="12sp"/>
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/ai_damage_bar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:max="100"
                    android:progress="0"
                    android:progressTint="@color/green_light"
                    android:progressBackgroundTint="#40FFFFFF"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tv_pre_visual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âš ï¸ PRE-VISUAL STRESS DETECTED"
                    android:textColor="#FFEB3B"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:visibility="gone"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Stress-Vision FAB -->
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fab_stress_vision"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Stress-Vision OFF"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold"
            app:backgroundTint="@color/fab_bg"
            app:icon="@drawable/ic_eye"
            app:iconTint="#FFFFFF"
            android:layout_marginBottom="10dp"/>

        <!-- Legend card -->
        <LinearLayout
            android:id="@+id/legend_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1" android:orientation="horizontal" android:gravity="center">
                <View android:layout_width="12dp" android:layout_height="12dp" android:background="@drawable/bg_green_circle"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="  Healthy" android:textColor="#FFFFFF" android:textSize="11sp"/>
            </LinearLayout>

            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1" android:orientation="horizontal" android:gravity="center">
                <View android:layout_width="12dp" android:layout_height="12dp" android:background="@drawable/bg_orange_circle"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="  Water" android:textColor="#FFFFFF" android:textSize="11sp"/>
            </LinearLayout>

            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1" android:orientation="horizontal" android:gravity="center">
                <View android:layout_width="12dp" android:layout_height="12dp" android:background="@drawable/bg_purple_circle"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="  Nutrient" android:textColor="#FFFFFF" android:textSize="11sp"/>
            </LinearLayout>

            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1" android:orientation="horizontal" android:gravity="center">
                <View android:layout_width="12dp" android:layout_height="12dp" android:background="@drawable/bg_red_circle"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="  Critical" android:textColor="#FFFFFF" android:textSize="11sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Model status label -->
        <TextView
            android:id="@+id/prototype_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ§  Loading AI model..."
            android:textColor="#A5D6A7"
            android:textSize="11sp"
            android:gravity="center"/>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>